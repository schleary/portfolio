<div class="flexContainer">
  <div class="flexHeight flexRow">
    <% if user_signed_in? %>
      <%= link_to 'New Entry', new_entry_path %>
    <% end %>
    <br>

    <% @entries.each do |entry| %>
      <%= link_to entry.image, entry_path(entry) %>
      <h1>
        <%= link_to entry.title, entry_path(entry) %>
      </h1>
      <%= entry.date.strftime('%B %w, %Y') %><br>
      <%= markdown entry.content %><br>
      <%= link_to 'Show', entry_path(entry) %>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_entry_path(entry) %>
        <%= link_to 'Delete', entry_path(entry),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>
</div>

