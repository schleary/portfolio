<div class="flexContainer">
  <div class="flexHeight flexRow">
    <% if user_signed_in? %>
      <%= link_to 'New Entry', new_entry_path %>
    <% end %>
    <br>

    <% @entries.each do |entry| %>

      <%= link_to entry_path(entry), target: "_blank" do %>
        <figure>
          <%= image_tag entry.image_url.to_s, alt: entry.title %>
        </figure>
      <% end %>

      <h1>
        <%= link_to entry.title, entry_path(entry) %>
      </h1>

      <%= entry.date.strftime('%B %w, %Y') %>

      <p>
        <%= markdown entry.content %>
      <p>
      <%= link_to 'Show', entry_path(entry) %>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_entry_path(entry) %>
        <%= link_to 'Delete', entry_path(entry),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      <% end %>
      <br>

    <% end %>
  </div>
</div>

