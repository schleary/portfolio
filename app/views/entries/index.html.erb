<h1>Blog Entries</h1>

<% if user_signed_in? %>
  <%= link_to 'New blog entry', new_entry_path %>
<% end %>

<br>

<% @entries.each do |entry| %>

  <%= entry.title %><br>
  <%= entry.date.strftime('%B %w, %Y') %><br>
  <%= entry.image %><br>
  <%= markdown entry.content %><br>
  <%= link_to 'Show', entry_path(entry) %><br>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_entry_path(entry) %>
    <%= link_to 'Delete', entry_path(entry),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
  <% end %>

<% end %>

